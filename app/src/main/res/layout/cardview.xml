<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/moneyin"
            android:layout_width="54dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/income" />

        <TextView
            android:id="@+id/money1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/teachers"
            android:textSize="20dp"
            tools:text="MONEY IN "
            app:layout_constraintStart_toEndOf="@+id/moneyin"
            app:layout_constraintTop_toTopOf="@+id/moneyin" />

        <TextView
            android:id="@+id/amount1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/teachers"
            android:textSize="20dp"
            tools:text="KES 42400"
            app:layout_constraintBottom_toBottomOf="@+id/moneyin"
            app:layout_constraintStart_toEndOf="@+id/moneyin"
            app:layout_constraintTop_toBottomOf="@+id/money1" />

        <ImageView
            android:id="@+id/moneyout"
            android:layout_width="54dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/moneyin"
            app:layout_constraintStart_toEndOf="@+id/money1"
            app:layout_constraintTop_toTopOf="@+id/moneyin"
            app:srcCompat="@drawable/expense" />

        <TextView
            android:id="@+id/money2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/teachers"
            tools:text="MONEY OUT"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/moneyout"
            app:layout_constraintTop_toTopOf="@+id/moneyout" />

        <TextView
            android:id="@+id/amount2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/teachers"
            android:textSize="20dp"
            tools:text="KES 23700"
            app:layout_constraintBottom_toBottomOf="@+id/moneyout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/moneyout"
            app:layout_constraintTop_toBottomOf="@+id/money2" />

        <ImageView
            android:id="@+id/balance"
            android:layout_width="54dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moneyin"
            app:srcCompat="@drawable/balance" />

        <TextView
            android:id="@+id/balance1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:fontFamily="@font/teachers"
            android:textSize="20dp"
            tools:text="BALANCE"
            app:layout_constraintStart_toEndOf="@+id/balance"
            app:layout_constraintTop_toBottomOf="@+id/amount1" />

        <TextView
            android:id="@+id/amount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/teachers"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/balance"
            app:layout_constraintStart_toEndOf="@+id/balance"
            tools:text="KES 18700" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="54dp"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/balance"
            app:layout_constraintStart_toEndOf="@+id/balance1"
            app:layout_constraintTop_toTopOf="@+id/balance"
            app:srcCompat="@drawable/transactions" />

        <TextView
            android:id="@+id/transactions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/teachers"
            tools:text="TRANSACTIONS"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/balance1" />

        <TextView
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/teachers"
            android:textSize="20dp"
            tools:text="8"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/balance"
            app:layout_constraintTop_toBottomOf="@+id/balance"
            app:srcCompat="@drawable/expense_trx" />

        <TextView
            android:id="@+id/salary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="104dp"
            android:text="salary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

        <TextView
            android:id="@+id/moneyA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="208dp"
            android:text="KES 20400"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView5" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="1 July 2024"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/moneyA"
            app:layout_constraintTop_toTopOf="@+id/moneyA" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>